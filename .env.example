# =================================================================
# SocialPro - إعدادات البيئة
# =================================================================

# تطبيق معلومات أساسية
NEXT_PUBLIC_APP_NAME=SocialPro
NEXT_PUBLIC_APP_DESCRIPTION=منصة التسويق الاحترافية عبر تيليجرام
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =================================================================
# Supabase Configuration
# =================================================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# قاعدة البيانات
DATABASE_URL=your_database_connection_string_here

# =================================================================
# Telegram Configuration  
# =================================================================
TELEGRAM_API_ID=your_telegram_api_id_here
TELEGRAM_API_HASH=your_telegram_api_hash_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =================================================================
# Security & Encryption
# =================================================================
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# =================================================================
# Rate Limiting & Security
# =================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# =================================================================
# Monitoring & Analytics
# =================================================================
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org_here
SENTRY_PROJECT=your_sentry_project_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# =================================================================
# Email Configuration
# =================================================================
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email@gmail.com
EMAIL_SERVER_PASSWORD=your_app_password_here
EMAIL_FROM=SocialPro <noreply@socialpro.com>

# =================================================================
# File Upload & Storage
# =================================================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv

# =================================================================
# Redis Configuration (للـ caching)
# =================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# =================================================================
# Development Settings
# =================================================================
NODE_ENV=development
DEBUG=socialpro:*
LOG_LEVEL=debug

# Development specific
NEXT_TELEMETRY_DISABLED=1
ESLINT_NO_DEV_ERRORS=1
