{
  "name": "social-pro",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0 --turbopack",
    "dev:local": "next dev",
    "dev:network": "next dev -H 0.0.0.0 --turbopack",
    "build": "next build",
    "start": "next start",
    "start:test": "NODE_ENV=test next start -p 3001",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=html --coverageReporters=lcov --coverageDirectory=coverage",
    "test:unit": "jest --testMatch=\"**/tests/**/*unit*.{js,ts,tsx}\" --coverage",
    "test:integration": "jest --testMatch=\"**/tests/**/*integration*.{js,ts,tsx}\" --coverage",
    "test:api": "jest --testMatch=\"**/tests/api-suite/**/*.{js,ts,tsx}\" --coverage",
    "test:security": "jest --testMatch=\"**/tests/security/**/*.{js,ts,tsx}\"",
    "test:performance": "jest --testMatch=\"**/tests/performance/**/*.{js,ts,tsx}\" --runInBand",
    "test:load": "jest --testMatch=\"**/tests/**/*load*.{js,ts,tsx}\" --runInBand",
    "test:stress": "jest --testMatch=\"**/tests/**/*stress*.{js,ts,tsx}\" --runInBand",
    "test:accessibility": "jest --testMatch=\"**/tests/**/*accessibility*.{js,ts,tsx}\"",
    "test:api:suite": "jest --testMatch=\"**/tests/api-suite/**/*.{js,ts,tsx}\"",
    "test:lib": "jest --testMatch=\"**/tests/lib/**/*.{js,ts,tsx}\" --coverage",
    "test:hooks": "jest --testMatch=\"**/tests/hooks/**/*.{js,ts,tsx}\" --coverage",
    "test:components": "jest --testMatch=\"**/tests/components/**/*.{js,ts,tsx}\" --coverage",
    "test:all": "jest --testMatch=\"**/tests/**/*.{js,ts,tsx}\" --coverage",
    
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "test:e2e:ci": "start-server-and-test \"npm run build && npm run start:test\" http://localhost:3001 \"playwright test\"",
    
    "test:visual": "jest --testMatch=\"**/tests/**/*visual*.{js,ts,tsx}\"",
    "test:snapshot": "jest --testMatch=\"**/tests/**/*snapshot*.{js,ts,tsx}\"",
    "test:a11y": "jest --testMatch=\"**/tests/**/*a11y*.{js,ts,tsx}\"",
    "test:smoke": "jest --testMatch=\"**/tests/**/*smoke*.{js,ts,tsx}\"",
    
    "test:setup": "npm run test:unit && npm run test:integration && npm run test:api",
    "test:full": "npm run test:setup && npm run test:e2e && npm run test:security && npm run test:performance",
    "test:ci": "npm run lint && npm run type-check && npm run test:security && npm run test:coverage",
    
    "db:migrate": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "db:seed": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' prisma/seed.ts",
    "db:reset": "prisma migrate reset --force --schema=./prisma/schema.prisma",
    
    "security-audit": "npm audit --audit-level moderate",
    "security:scan": "npm run test:security && npm audit --audit-level moderate",
    "dependency-check": "npm outdated --depth=0 || true",
    "bundle-analyze": "cross-env ANALYZE=true npm run build",
    "analyze:bundle": "npm run bundle-analyze",
    
    "coverage:report": "open coverage/lcov-report/index.html",
    "coverage:publish": "codecov",
    "test:report": "allure generate test-results/allure-results --clean -o test-results/allure-report && allure open test-results/allure-report",
    
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@sentry/nextjs": "^8.0.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/ssr": "^0.4.0",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.17.0",
    "@tanstack/react-query-devtools": "^5.17.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "date-fns": "^3.0.0",
    "lucide-react": "^0.441.0",
    "next": "15.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.48.0",
    "react-hot-toast": "^2.4.1",
    "sonner": "^1.4.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "telegram": "^2.20.0",
    "zod": "^3.22.0",
    "next-sitemap": "^4.2.0",
    "sharp": "^0.33.0",
    "@hookform/resolvers": "^3.3.0",
    "react-markdown": "^9.0.0",
    "react-day-picker": "^8.10.0",
    "recharts": "^2.10.0",
    "react-table": "^7.8.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.3.0",
    "eslint-plugin-react": "^7.37.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.2"
  }
}
